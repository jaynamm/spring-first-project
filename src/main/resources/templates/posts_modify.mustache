{{>layout/header}}

<div class="container">
    <h1>게시글 수정</h1>

    <div class="col-md-12">
        <div class="col-md-4">
            <form action="/api/v1/posts/write" method="post">
                <div class="form-group">
                    <label for="id">글 번호</label>
                    <input type="text" class="form-control" id="id" value="{{ post.id }}" readonly>
                </div>
                <div class="form-group">
                    <label for="title">제목</label>
                    <input type="text" class="form-control" id="title" value="{{ post.title }}" placeholder="제목을 입력하세요." />
                </div>
                <div class="form-group">
                    <label for="author">작성자</label>
                    <input type="text" class="form-control" id="author" value="{{ post.author }}" placeholder="작성자를 입력하세요.">
                </div>
                <div class="form-group">
                    <label for="content">내용</label>
                    <textarea name="content" id="content" class="form-control" placeholder="내용을 입력하세요.">{{ post.content }}</textarea>
                </div>
                <div class="form-group">
                    <a href="/" role="button" class="btn btn-secondary">취소</a>
                    <button id="btn-update" class="btn btn-primary" type="button">수정</button>
                </div>
            </form>
        </div>
    </div>
</div>

{{>layout/footer}}